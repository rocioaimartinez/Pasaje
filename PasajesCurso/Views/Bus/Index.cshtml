@using PasajesCurso.Models
@model List<BusCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Infomacion Buses</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>@Html.LabelFor(p => Model[0].iidBus)</td>
            <td>@Html.LabelFor(p => Model[1].placa)</td>
            <td>@Html.LabelFor(p => Model[2].nombreModelo)</td>
            <td>@Html.LabelFor(p => Model[3].nombreSucursal)</td>
            <td>@Html.LabelFor(p => Model[4].nombreTipoBus)</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.iidBus</td>
            <td>@item.placa</td>
            <td>@item.nombreModelo</td>
            <td>@item.nombreSucursal</td>
            <td>@item.nombreTipoBus</td>
        </tr>

        }
    </tbody>
</table>

